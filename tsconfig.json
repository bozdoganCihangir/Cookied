{
    "compilerOptions": {
        "outDir": "dist",
        "moduleResolution": "node",
        "target": "es3",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "declaration": true,
        "declarationDir": "dist",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src"]
}
